---
import Component from "../components/Component.astro";
import { SAASDATAS } from "../data/saas";
import Saas from "../components/saas/index.astro";
import { OpenSourceData } from "../data/opensource";
import OpenSource from "../components/opensource/index.astro";

import { SOCIALS } from "../data/socials";
import Layout from "../layouts/Layout.astro";
---

<Layout title="Ryan Yang">
  <div class="relative hero z-10">
    <div
      class="mx-auto min-h-screen max-w-screen-2xl px-6 py-12 font-sans md:px-12 md:py-20 lg:px-24 lg:py-0"
    >
      <div class="lg:flex lg:justify-between lg:gap-36">
        <header
          class="lg:sticky lg:top-0 lg:flex lg:max-h-screen lg:w-1/2 lg:flex-col lg:justify-between lg:py-24"
        >
          <div
            class="flex lg:items-start gap-4 flex-col lg:flex-row items-center text-center lg:text-left"
          >
            <!-- <img src="/avatar.png" alt="Ryan Yang" class="w-16 h-16" /> -->
            <div>
              <a
                href="/"
                class="text-4xl lg:text-5xl block font-bold tracking-tight bg-clip-text text-transparent bg-gradient-to-b from-neutral-50 to-neutral-400 bg-opacity-50"
              >
                <h1>Ryan Yang</h1>
              </a>
              <h2 class="mt-2 text-sm lg:text-lg font-medium text-neutral-400">
                FullStack Engineer
              </h2>
              <a
                data-ccursor
                href="https://x.com/ruiyang25"
                class="inline-flex transition-all border-neutral-700 hover:border-opacity-0 border-opacity-50 shadow rounded-md border backdrop-blur-xl bg-neutral-400/10 px-3 py-2.5 items-center text-white font-semibold group p-2 text-sm gap-x-2 mt-4"
              >
                <span>Let's Connect</span>
                <sapn
                  class="w-2 h-2 rounded-full bg-green-400 duration-1000 animate-pulse"
                ></sapn>
              </a>
            </div>
            <img
              src="/avatar.webp"
              alt="Ryan Yang"
              class="w-16 h-16 rounded-full"
            />
          </div>
          <section
            id="about"
            class="mt-4 mb-16 scroll-mt-16 md:mb-24 lg:mb-36 lg:scroll-mt-24"
            aria-label="About me"
          >
            <div
              class="sticky top-0 z-20 -mx-6 mb-4 w-screen px-6 py-3 backdrop-blur-lg md:-mx-12 md:px-12 lg:sr-only lg:relative lg:top-auto lg:mx-auto lg:w-full lg:px-0 lg:py-0 lg:opacity-0"
            >
              <h2
                class="text-sm font-bold uppercase tracking-widest text-neutral-200 lg:sr-only"
              >
                About
              </h2>
            </div>
            <div>
              <div class="mb-4 space-y-4">
                <p>
                  I'm Ryan Yang, a software developer, indie hacker, and the
                  proud dad of two adorable cats. I have a strong focus on
                  artificial intelligence and micro SaaS tools. I love building
                  beautiful UIs and creating interesting apps.
                </p>
                <p>
                  I'm passionate about new technology and always on the lookout
                  for great opportunities!
                </p>
              </div>
            </div>
          </section>
          {
            SOCIALS.length && (
              <ul
                class="mt-8 flex items-center justify-center lg:justify-normal gap-x-5"
                aria-label="Social media"
              >
                {SOCIALS.map((social) => (
                  <li class="text-xs p-2 rounded" data-ccursor>
                    <a
                      class="block hover:text-slate-200"
                      href={social.url}
                      target="_blank"
                      rel="noreferrer noopener"
                      aria-label={`${social.name} (opens in a new tab)`}
                    >
                      <span class="sr-only">{social.name}</span>
                      {<Component component={social.icon} />}
                      <sapn class="w-2 h-2 rounded-full bg-green-400 duration-1000 animate-pulse" />
                    </a>
                  </li>
                ))}
              </ul>
            )
          }
        </header>

        <main id="content" class="pt-24 lg:w-1/2 lg:py-24">
          <section
            id="saas"
            class="mb-16 scroll-mt-16 md:mb-24 lg:mb-24 lg:scroll-mt-16"
            aria-label="Work Projects"
          >
            <div
              class="sticky top-0 z-20 -mx-6 mb-4 w-screen px-6 py-3 backdrop-blur-lg md:-mx-12 md:px-12"
            >
              <h2
                class="text-sm font-bold uppercase tracking-widest text-neutral-200"
              >
                Micro Saas Projects
              </h2>
            </div>
            <div class="flex flex-col gap-16">
              <ol class="group/list space-y-12">
                {SAASDATAS.map((saas) => <Saas {...saas} />)}
              </ol>
            </div>
          </section>
          <section
            id="opensource"
            class="mb-16 scroll-mt-16 md:mb-24 lg:mb-36 lg:scroll-mt-24"
            aria-label="Work Projects"
          >
            <div
              class="sticky top-0 z-20 -mx-6 mb-4 w-screen px-6 py-3 backdrop-blur-lg md:-mx-12 md:px-12"
            >
              <h2
                class="text-sm font-bold uppercase tracking-widest text-neutral-200"
              >
                Open Source Projects
              </h2>
            </div>
            <div class="flex flex-col gap-16">
              <ol class="group/list space-y-12">
                {OpenSourceData.map((saas) => <OpenSource {...saas} />)}
              </ol>
            </div>
          </section>
        </main>
      </div>
    </div>
  </div>

  <footer class="text-center py-4 text-xs">
    {new Date().getFullYear()} All rights reserved.
  </footer>
</Layout>

<style scoped>
  @keyframes fadeIn {
    0% {
      opacity: 0;
    }
    100% {
      opacity: 1;
    }
  }

  .hero {
    background-image: url(/pattern.svg);
    background-position: top center;
    background-repeat: no-repeat;
    overflow-y: visible;
    overflow-x: clip;
  }

  /*
  .hero {
    animation: fadeIn 3s;
  }
   */
</style>
